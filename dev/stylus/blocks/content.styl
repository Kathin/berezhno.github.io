.content
  transition transform $speed 
  .container
    &:after
      content "" 
      display table
      width 100% 
  &__fader
    position absolute
    z-index 190
    top 0
    left 0
    width 100% 
    height 100% 
    background-color rgba(#000, 0.6)
    opacity 0
    visibility hidden
    // will-change opacity, visibility
    // transition-property opacity, visibility
    // transition-duration $speed *5
  +btw($m, $t)
    .topbar ~ & .content__fader
      top -38px
      height calc(100% + 38px) 
