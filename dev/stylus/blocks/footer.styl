.footer
  background #0f0f0f
  color #fff
  position relative  
  &__menu
    width 100%
    text-align center
    height 65px
    a
      color #cccccc
      &:hover
        text-decoration none
    &-item
      display inline-block
      padding 0 15px
      vertical-align middle
      position relative
      line-height 65px
      font-size 16px
      font-weight lighter
      vertical-align bottom
      &:hover
        font-weight normal 
        color #ffffff
        cursor pointer 
        a
          color #ffffff 
          font-weight normal 
          letter-spacing -0.1px
    &:after
      content ""
      display inline-block
      width 100%
  &__bottom
    height 72px
    background url(../img/back-menu-footer.png)
    background-size cover
    background-position center
  &__about
    display block
    text-align center
    overflow hidden
    padding-top 20px
    line-height 18px
    font-size 14px
    width 100%
